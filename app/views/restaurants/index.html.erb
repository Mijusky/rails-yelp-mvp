<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1504208434309-cb69f4fe52b0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">

<div class="container">
    <h1><strong>Welcome to yelp 👋🏻</strong>!</h1>
    <%= link_to "Add a new restaurant!", new_restaurant_path, class:"btn btn-success m-3" %>
  </div>

</div>

<div class="container">
  </div>
  <% @restaurants.each do |restaurant| %>
    <div class="card d-flex ">
      <div class="row align-items-center justify-content-center">
        <h3><%= restaurant.name %> - <%= restaurant.category.capitalize %></h3>
        <h3><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary m-3" %></h3>
      </div>
    </div>
  <% end %>
</div>
</div>
